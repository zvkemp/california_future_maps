%html
  %head
    %title California Population Projections
    :css
      * {
        font-family: arial, helvetica, sans-serif;
      }

      select {
        font-weight: bold;
        -webkit-appearance: none;
        background-color: white;
      }

      select.large {
        font-size: 12pt;
        padding: 5px;
      }

      select.small {
        font-size: 10pt;
        padding: 3px;
      } 

      p { margin: 0px; }

      .small {
        font-size: 10pt;
      }

      .large {
        font-size: 12pt;
        font-weight: bold;
      }

      table {
        width: 1100px;
      }

      td {
        font-size: 9pt;
        padding: 5px;
      }

      td.button {
        border: 1px solid #bcbcbc;
        /*
        width: 250px;
        height: 40px; 
        margin: 4px; 
        */
        margin: 4px;
        cursor: pointer;
      }


      .active {
        font-weight: bold;
        background-color: #f9f9f9;
      }

      .muted {
        color: gray;
      }

      #footer {
        margin-top: 20px;
      }


    %script{ type: "text/javascript", src: "http://d3js.org/d3.v3.min.js" }
    %script{ type: "text/javascript", src: "http://d3js.org/topojson.v1.min.js" }
    %script{ type: "text/javascript", src: "js/california.js" }




  %body
    #wrapper
      #header
        %h2 Bay Area Demographic Trends

      #main
        =yield

      #footer
        %p
          %small.muted
            Data from the California Department of Finance and the US Census Bureau.

        %p
          %a{ href: 'using_the_map.png', target: "_blank" } Click here for help using the map.


    



